<?xml version="1.0" encoding="utf-8"?>
<UserControl 
    x:Class="Cadastros.View.BancoLista" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:viewBotoes="clr-namespace:Cadastros.View.Botoes" 
    mc:Ignorable="d" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib" 
    xmlns:util="clr-namespace:Cadastros.Util" 
    d:DesignHeight="500" 
    d:DesignWidth="700">
    
	<UserControl.Resources>
		<util:MoedaFormat x:Key="moedaFormat" />
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition 
                Width="*" />
		</Grid.ColumnDefinitions>
		<DockPanel 
            LastChildFill="True">
			<StackPanel 
                DockPanel.Dock="Top"
                Grid.Column="0">
				<viewBotoes:BarraExterna></viewBotoes:BarraExterna>
			</StackPanel>
			<DataGrid 
                Name="dataGrid" 
                AutoGenerateColumns="false" 
                IsReadOnly="True" 
                CanUserAddRows="False"
                CanUserDeleteRows="False" 
                ItemsSource="{Binding ListaBanco}" 
                SelectedItem="{Binding BancoSelected}">
				<DataGrid.Columns>
					<DataGridTextColumn 
                        Header="Id" Binding="{Binding Path=ID}"  />
					<DataGridTextColumn 
                        Header="Codigo" Binding="{Binding Path=CODIGO}"  />
					<DataGridTextColumn 
                        Header="Nome" Binding="{Binding Path=NOME}"  />
					<DataGridTextColumn 
                        Header="Url" Binding="{Binding Path=URL}"  />
				</DataGrid.Columns>
			</DataGrid>
		</DockPanel>
	</Grid>
</UserControl>