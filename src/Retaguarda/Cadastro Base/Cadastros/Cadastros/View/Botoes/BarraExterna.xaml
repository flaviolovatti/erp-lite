<?xml version="1.0" encoding="utf-8"?>
<UserControl 
    x:Class="Cadastros.View.Botoes.BarraExterna" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextElement.FontWeight="Regular"
    TextElement.FontSize="12"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    
    d:DesignHeight="40" d:DesignWidth="900">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="Transparent">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <!-- Navegacao -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <Button 
                            x:Name="Go_PaginaAnterior"
                            Width="20" 
                            Height="20"
                            Padding="3"
                            Margin="0 0 0 0"
                            materialDesign:ShadowAssist.ShadowDepth="Depth5"
                            Command="{Binding PaginaAnteriorCommand}" 
                            ToolTip="Segue para a p치gina anterior" 
                            IsEnabled="{Binding NavegaPaginaAnterior}">
                                <materialDesign:PackIcon 
                                Kind="SkipPrevious"
                                Foreground="Black"/>
                            </Button>
                            <TextBlock Text="Anterior" FontSize="10"/>
                        </StackPanel>
                        <Separator/>
                        <StackPanel 
                            Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10 0 0 0">
                            <Button 
                            x:Name="Go_PaginaSeguinte"
                            Width="20" 
                            Height="20"
                            Padding="3"
                            Margin="0 0 0 0"
                            materialDesign:ShadowAssist.ShadowDepth="Depth5"
                            Command="{Binding PaginaSeguinteCommand}" 
                            ToolTip="Segue para a p치gina seguinte" 
                            IsEnabled="{Binding NavegaPaginaSeguinte}">
                                <materialDesign:PackIcon 
                                Kind="SkipNext"
                                Foreground="Black"/>
                            </Button>
                            <TextBlock Text="Seguinte" FontSize="10"/>
                        </StackPanel>
                        <Separator/>
                    </StackPanel>
                    <!-- Fim da Navegacao -->
                    <!-- ****** -->
                    <!-- Botoes de inserir, alterar e excluir -->
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="30 0 0 0">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <Button 
                                Width="23" 
                                Height="20"
                                Padding="3"
                                Margin="0 0 0 0"
                                materialDesign:ShadowAssist.ShadowDepth="Depth5"
                                Command="{Binding InserirCommand}" 
                                ToolTip="Inserir registro" >
                                <materialDesign:PackIcon 
                                Kind="File"
                                Foreground="Black"/>
                            </Button>
                            <TextBlock Text="Novo" FontSize="10"/>
                        </StackPanel>
                        <Separator/>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10 0 0 0">
                            <Button 
                                Width="23" 
                                Height="20"
                                Padding="3"
                                Margin="0 0 0 0"
                                materialDesign:ShadowAssist.ShadowDepth="Depth5"
                                Command="{Binding AlterarCommand}" 
                                ToolTip="Alterar registro">
                                <materialDesign:PackIcon 
                                    Kind="Pencil" 
                                    Foreground="Black"/>
                            </Button>
                            <TextBlock Text="Editar" FontSize="10"/>
                        </StackPanel>
                        <Separator/>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10 0 0 0">
                            <Button 
                                Width="23" 
                                Height="20"
                                Padding="3"
                                Margin="0 0 0 0"
                                materialDesign:ShadowAssist.ShadowDepth="Depth5"
                                Command="{Binding ExcluirCommand}" 
                                ToolTip="Excluir registro">
                                <materialDesign:PackIcon 
                                    Kind="Delete" 
                                    Foreground="Black"/>
                            </Button>
                            <TextBlock Text="Remover" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                    <!-- Fim dos botoes de inserir, alterar e excluir -->
                    <!-- Botoes de impressao e busca de dados -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="230 0 0 0">
                        <TextBox 
                            FlowDirection="LeftToRight" 
                            Text="{Binding Filtro}" 
                            Height="40" 
                            Width="450"
                            Margin="10 0 0 0"
                            Padding="1"
                            Name="TextBoxLocalizar"
                            materialDesign:HintAssist.Hint="Pesquisa"
                            materialDesign:HintAssist.IsFloating="True"/>
                        <StackPanel 
                            Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10 0 0 0">
                            <Button 
                                Width="23" 
                                Height="20"
                                Padding="3"
                                Margin="0 0 0 0"
                                materialDesign:ShadowAssist.ShadowDepth="Depth5"
                                Command="{Binding LocalizarCommand}" 
                                ToolTip="Filtrar Dados" >
                                <materialDesign:PackIcon 
                                    Kind="Eye" 
                                    Foreground="Black"/>
                            </Button>
                            <TextBlock Text="Localizar" FontSize="10"/>
                        </StackPanel>
                        <Separator/>
                        <StackPanel 
                            Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10 0 0 0">
                            <Button 
                                Width="23" 
                                Height="20"
                                Padding="3"
                                Margin="0 0 0 0"
                                Command="{Binding ImprimirCommand}" 
                                ToolTip="Imprimir relat칩rio" 
                                Visibility="{Binding ExibeBotaoImprimir}">
                                <materialDesign:PackIcon 
                                    Kind="Printer" 
                                    Foreground="Black"/>
                            </Button>
                            <TextBlock Text="Imprimir" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                    <!-- Fim dos botoes de impressao e busca de dados -->
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
