<UserControl x:Class="Cadastros.View.CargoPrincipal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:Cadastros.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="700">
    <TabControl>
        <TabItem Name="tabCargoLista" Visibility="Collapsed" IsSelected="{Binding IsListar}">
            <TabItem.Content>
                <DockPanel LastChildFill="True">
                    <view:CargoLista></view:CargoLista>
                </DockPanel>
            </TabItem.Content>
        </TabItem>
        <TabItem Name="tabCargo" Visibility="Collapsed" IsSelected="{Binding IsEditar}">
            <view:Cargo></view:Cargo>
        </TabItem>
    </TabControl>
</UserControl>
